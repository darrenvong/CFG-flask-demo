{% extends "base.htm.j2" %}
{% block title %}Feedback Form{% endblock %}
{% block styles %}
  {{ super() }}
  <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/feedback.css') }}">
{% endblock %}
{% block content %}
  <div id="contact-form">
    <h3>Get In Touch!</h3>
    <p>If you have any suggestions on how to improve this website, feel free to leave your feedback using the form below.</p>
    <form class="form-horizontal" method="post" action="/feedback_submit">
      {# Macro defined here for simplicity. For more complex cases, consider writing it in a separate file and import it. #}
      {% macro form_group_div(name, label, type, placeholder, required=False, autofocus=False) %}
        <div class="form-group">
          <label for="{{name}}" class="col-xs-12 col-sm-3 control-label">{{label}}</label>
          <div class="col-xs-12 col-sm-6">
            <input type="{{type}}" class="form-control" id="{{name}}" name="{{name}}" value="" placeholder="{{placeholder}}" {% if required %}required{% endif %} {% if autofocus %}autofocus{% endif %} />
          </div>
        </div>
      {% endmacro %}
      {{ form_group_div('name', 'Name: ', 'text', 'Your name here', required=True, autofocus=True) }}
      {{ form_group_div('email', 'Email Address: ', 'email', 'Your email here', required=True) }}
      
      <div class="form-group">
        <label for="comment" class="col-xs-12 col-sm-3 control-label">Comments: </label>
        <div class="col-xs-12 col-sm-6">
          <textarea class="form-control" id="comments" name="comments" rows="3" placeholder="Leave your comments here..."></textarea>
        </div>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-3">
          <input type="submit" class="btn btn-default" value="Submit" id="submit-button" />
        </div>
      </div>
    </form>
  </div>
{% endblock %}
