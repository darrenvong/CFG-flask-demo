{% extends "base.htm.j2" %}
{% block title %}
  Hello from Flask
{% endblock %}

{% block styles %}
  {{ super() }}
  <link rel="stylesheet" type="text/css" href="{{ url_for('static', filename='css/hello.css') }}">
{% endblock %}

{% block content %}
  
  {% if name and bye %}
    <h1>Goodbye {{name}}!
    {% if time == "day" %}
      Have a good day!</h1>
    {% elif time == "night" %}
      Have a good night!</h1>
    {% else %}
    </h1>
    {% endif %}    
  {% elif name %}
    <h1>Hello {{ name }}</h1>
  {% else %}
    <h1>Hello World!</h1>
  {% endif %}

{% endblock %}
