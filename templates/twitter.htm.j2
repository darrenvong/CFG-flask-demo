{% extends "base.htm.j2" %}
{% block title %}Twitter Example{% endblock %}

{% block content %}
  <div class="row">
    <form action="/twitter_search" method="post">
      <div class="col-sm-6">
        {% from "form_input_helper.htm.j2" import form_group_div as input_div %}
        {{ input_div("s", "Search Term: ", "text", "Begin searching Twitter here...", required=True) }}
      </div>
      <div class="col-sm-6">
        <button type="submit" class="btn btn-primary">Send!</button>
      </div>    
    </form>
  </div>
{% endblock %}
